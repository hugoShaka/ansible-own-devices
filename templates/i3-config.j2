#bindsym XF86MonBrightnessDown exec brightness.sh down
#bindsym $mod+F8 exec screen.sh
bindsym $mod+Shift+s exec i3lock -c 000000 -i {{ homedir }}/Pictures/wallpapers/wp.png
bindsym $mod+Shift+p exec rofi-pass
